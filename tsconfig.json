{
  "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": [
          "ES2020",
          "DOM",
          "DOM.Iterable"
      ],
      "skipLibCheck": true,
      /* Bundling */
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "dist",
      "declaration": true,
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
  },
  "include": [
      "src"
  ]
}